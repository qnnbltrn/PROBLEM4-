#include <iostream>
#include <conio.h>

using namespace std;

int main ()
{
	int num1, num2, num3;
	
	cout << "Enter the value of the first number:";
	cin >> num1;
	
	cout << "\n";
	
	cout << "Enter the value of the second number:";
	cin >> num2;
	
	cout << "\n";
	
	cout << "Enter the value of the third number:";
	cin >> num3;
	
	cout << "\n";
	
	if (num1 >= num2)
	{
	        if (num1 >= num3)
	            cout << "The Largest Number is: " << num1;
	            
	       
	       else
	            cout << "The Largest Number is: " << num3;
	}  
	
	else if (num2 >= num3)
	{
	        if (num2 >= num3)
	            cout << "The Largest Number is:" << num2;
	            
	        else
	            cout << "The Largest Number is:" << num3;
	}  
	
	else 
	{
	        if (num1 == num2 && num2 == num3)
	            cout << "The value you have entered are equal, therefore there is no Larger Number!";
	            
	       else 
	            cout << "The value you have entered are equal, therefore there is no Larger Number!";
	}

_getch ();
return 0;
}
